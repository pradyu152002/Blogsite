<body>


  <div class="jumbotron">
    <h1 class="display-4"><%= usersName%></h1>
    <hr class="my-4">
    <!-- idhar hai bootstrap wala -->

 </div>



      <a class="nav-link" href="/admin">Back to admin</a>


  <!-- view blogs -->
  <% users.forEach(function(user){ %>
  <% if(user.name===usersName){ %>
  <% user.blogs.forEach(function(post){ %>

  <div class="jumbotron jumbotron-fluid" style="width:70%;margin-left:15%">
    <div class="container">
      <h1 class="display-4"><%=post.title%></h1>
      <p class="lead"><%=post.post%></p>
    </div>
  </div>

  <% });%>

  <% } %>
  <% }); %>


</body>

</html>
